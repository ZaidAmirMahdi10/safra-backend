// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int      @id @default(autoincrement())
  username String
  email    String @unique
  password String
  // Other admin-specific fields
}

model Company {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  location String
  website  String?
  logo     String?
  docs     String?
  ranking   String?
  // Other company-specific fields
  safras Safra[]

}

model Customer {
  id       Int      @id @default(autoincrement())
  username String
  email    String @unique
  password String
  // Other customer-specific fields
  safras Safra[] // Customers can view and buy multiple safras
}


model Programme {
  id        Int      @id @default(autoincrement())
  dayNum    Int
  program   String @db.Text 
  safra     Safra[] 
}

model Safra {
  id        Int      @id @default(autoincrement())
  name      String
  desc      String @db.Text
  dateFrom  DateTime
  dateTo    DateTime
  companyId Int?
  price     String
  company   Company? @relation(fields: [companyId], references: [id])
  customers Customer[]
  type      String
  programId Int?
  programme Programme? @relation(fields: [programId], references: [id])
  offer     String? @db.Text
}




